<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/TextSoLuong"
        android:layout_width="93dp"
        android:layout_height="22dp"
        android:layout_marginTop="16dp"
        android:text="Số Lượng $ : "
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/Convert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Convert"
        app:layout_constraintTop_toBottomOf="@+id/Answer"
        tools:layout_editor_absoluteX="128dp" />

    <EditText
        android:id="@+id/SoLuong"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/TextSoLuong"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextKQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Kết quả : "
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/TextSoLuong"
        tools:layout_editor_absoluteX="34dp" />

    <EditText
        android:id="@+id/Answer"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/TextKQ"
        app:layout_constraintTop_toBottomOf="@+id/SoLuong" />

    <TextView
        android:id="@+id/VND"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="28dp"
        android:text="VND"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/Answer"
        app:layout_constraintTop_toBottomOf="@+id/SoLuong" />

</androidx.constraintlayout.widget.ConstraintLayout>